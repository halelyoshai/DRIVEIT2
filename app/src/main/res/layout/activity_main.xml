<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driveit_three"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/drivrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/drive_it"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="80sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnsignin"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#00CDDC39"
        android:text="היכנס"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:iconTint="#0B0A0A"
        app:strokeColor="#131313" />

    <Button
        android:id="@+id/btnsignups"
        style="@android:style/Widget.Holo.Light.Button.Inset"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00101010"
        android:text="@string/sign_up_S"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnsignup"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000C0C0C"
        android:text="@string/sign_up_T"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp" />


</LinearLayout>





