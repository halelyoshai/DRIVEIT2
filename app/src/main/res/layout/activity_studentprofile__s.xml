<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    tools:context=".StudentsProfile_Activity">


    <TableLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TableRow
    android:layout_width="358dp">

    <TextView
        android:id="@+id/txtstudentprofile"
        android:layout_height="wrap_content"
        android:layout_width="415dp"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:text="פרופיל תלמיד"
        />

</TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageButton
        android:id="@+id/btnpicture"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="click me"
        android:layout_weight="1"
        android:background="@drawable/driveit_one"
        android:backgroundTint="#FFFFFF"

   />

</TableRow>

    -<TableRow
    android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/txtname"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:backgroundTint="#32FFFFFF"
            android:text="שם:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#FFFFFF"
            app:strokeColor="#131313" />
</TableRow>

    <TableRow
    android:layout_height="match_parent"
    android:layout_width="match_parent">


        <TextView
            android:id="@+id/txtteacher"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:backgroundTint="#00CDDC39"
            android:text="לומד אצל:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:strokeColor="#131313" />
</TableRow>

</TableLayout>
    -<TableLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    -<TableRow
    android:layout_height="115dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/txtbigtest"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/circle"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="טסט חיצוני:"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtsmalltest"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/circle"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        android:text="טסט פנימי:"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtlessonscounting"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/circle"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:text="שיעור מספר:"
        android:textAlignment="textEnd"
        android:textColorHighlight="#090909"
        android:textColorHint="@color/black"
        android:textSize="40sp" />
</TableRow>


    <TableRow android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btntests"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/goblet" />

        <Button
            android:id="@+id/btnlessons"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/clock"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <Button
            android:id="@+id/btninfo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/quationsmarksbackgrounds"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <Button
            android:id="@+id/btnteachers"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:drawableBottom="@drawable/gear" />
    </TableRow>


</TableLayout>

</LinearLayout>