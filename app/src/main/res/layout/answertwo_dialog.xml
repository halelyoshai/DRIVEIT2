<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/infobackgroundd">

    <EditText
        android:id="@+id/lessonnumber"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="ממה צריך בשביל להתחיל ללמוד נהיגה?"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/Answer2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="על מנת להתחיל ללמוד נהיגה כל מה שצריך זה להוציא טופס ירוק וברוב המקרים המורה גם ידרוש לעבור את המבחן התיאורטי לפני שמתחילים ללמוד- ניתן גם לעשות זאת תוך כדי השיעורים- המלצה שלנו: לא כדאי לחכות:)"
        android:textSize="20sp" />

</LinearLayout>


