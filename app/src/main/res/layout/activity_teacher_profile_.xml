<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluebackground"
    tools:context=".TeacherProfile_Activity">



        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TableRow
            android:layout_width="358dp">

            <TextView
                android:id="@+id/txtteacherprofile"
                android:layout_height="wrap_content"
                android:layout_width="415dp"
                android:textSize="50sp"
                android:layout_gravity="center"
                android:text="פרופיל מורה"
                />

        </TableRow>

            <TableRow android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <Button
                    android:id="@+id/btnrofilepic"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/driveit_one"
                    android:backgroundTint="#FFFFFF"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

            <TextView
                android:id="@+id/btnteachername"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00FFFFFF"
                android:backgroundTint="#00CDDC39"
                android:text="שם המורה:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                app:strokeColor="#131313"
                app:iconTint="#FFFFFF" />/>
        </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/btnschool"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="80dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00CDDC39"
                    android:text="בית ספר:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    app:strokeColor="#131313" />

                <TextView
                    android:id="@+id/btnstudyarea"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="-290dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#00CDDC39"
                    android:text="מלמד באיזור:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    app:strokeColor="#131313" />
            </TableRow>

        </TableLayout>
        -<TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        -<TableRow
        android:layout_height="115dp">

        <TextView
            android:id="@+id/txtstudentsnum"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:text="תלמידים:"
            android:textAlignment="textEnd"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/txtwaitingfortest"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:text="מחכים לטסט:"
            android:textAlignment="textEnd"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtavailablelessons"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:text="שיעור פנויים היום:"
            android:textAlignment="textEnd"
            android:textColorHighlight="#090909"
            android:textColorHint="@color/black"
            android:textSize="30sp" />
    </TableRow>


        <TableRow android:layout_height="50dp">

        </TableRow>

        <TableRow android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <ImageButton
                android:id="@+id/btnstudentsrating"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/Goblet"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>

            <ImageButton
                android:id="@+id/btnschedule"
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/Calendar"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <ImageButton
                android:id="@+id/btninfo"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/yellow"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />

            <ImageButton
                android:id="@+id/btndefinitions"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/Gear"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"/>
        </TableRow>


    </TableLayout>
</LinearLayout>