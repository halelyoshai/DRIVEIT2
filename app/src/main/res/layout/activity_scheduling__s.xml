<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    tools:context=".SchedulingActivity_T">

     <TableRow>
         <Button
    android:id="@+id/btnclock"
    android:layout_width="89dp"
    android:layout_height="89dp"
    android:layout_gravity="left"
    android:backgroundTint="#00CDDC39"
    android:text="בית"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textSize="10sp"
    app:iconTint="#0B0A0A"
    app:strokeColor="#131313" />


   <TextView
    android:id="@+id/txtstudentprofile"
   android:layout_height="89dp"
             android:layout_width="240dp"
             android:layout_gravity="left"
       android:layout_marginLeft="-260dp"
             android:text="קביעת שיעורים"
             android:textSize="38sp"
             />

         <Button
             android:id="@+id/btnhome"
             android:layout_width="89dp"
             android:layout_height="89dp"
             android:layout_gravity="right"
             android:layout_marginLeft="-210dp"
             android:backgroundTint="#00CDDC39"
             android:hint="בית"
             android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             android:textSize="10sp"
             app:iconTint="#0B0A0A"
             app:strokeColor="#131313" />
     </TableRow>

    <TableRow>

        <CalendarView
            android:id="@+id/CalendarView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

    </TableRow>


    <TableRow android:layout_height="24dp">

        <TextView
            android:id="@+id/txtlastweek"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:text="שבוע הבא"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/txtlastweek"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="-150dp"
            android:text="השבוע הקודם"
            android:textSize="25sp" />
    </TableRow>


    <TextView
            android:id="@+id/txthour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="שעה"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            android:visibility="visible" />

    <TextView
        android:id="@+id/txthour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alfa_slab_one"
        android:text="שעה"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txthour3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alfa_slab_one"
        android:text="שעה"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txthour4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/alfa_slab_one"
        android:text="שעה"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        android:visibility="visible" />



</TableLayout>