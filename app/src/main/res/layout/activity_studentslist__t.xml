<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/driveittrafficlights"
        android:orientation="vertical"
        tools:context=".Studentslist_Activity">


    <TableLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">


        <TableRow>
        <Button
            android:id="@+id/btnrating"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:backgroundTint="#00CDDC39"
            android:text="בית"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:strokeColor="#131313" />
        </TableRow>

    <TableRow
        android:layout_width="wrap_content">


    <TextView
        android:id="@+id/txtstudentslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/studentsrightnow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="38sp"
        android:visibility="visible" />


        <Button
            android:id="@+id/btnplus"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="#318E24AA"
            android:backgroundTint="#00CDDC39"
            android:text="+"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="30sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />


    </TableRow>

