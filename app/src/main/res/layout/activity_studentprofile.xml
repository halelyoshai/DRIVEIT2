<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
<TableRow android:layout_width="358dp">

    <TextView
        android:id="@+id/txtstudentsprodfile"
        android:layout_width="241dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/studentprofile"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="40sp"
        android:visibility="visible" />
</TableRow>

    <TableRow>

        <Button
            android:id="@+id/btnname"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="#00CDDC39"
            android:text="@string/name1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />


    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btncity"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:backgroundTint="#00CDDC39"
            android:text="@string/city3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />

        <ImageView
            android:layout_width="140dp"
            android:layout_height="192dp"
            android:layout_gravity="right"
            android:layout_marginTop="-200dp"
            android:background="@drawable/driveit_one" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnteacher"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00CDDC39"
            android:text="@string/teacher3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnschool"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00CDDC39"
            android:text="בית ספר"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />
    </TableRow>

    <TableRow android:layout_height="65dp">

        <TextView
            android:id="@+id/btnlessonscounting"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="143dp"
            android:layout_height="129dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_button"
            android:backgroundcolor="#547DA6"
            android:text="שיעור מספר"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btnsmalltest"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="100dp"
            android:layout_height="129dp"
            android:layout_gravity="left"
            android:layout_marginLeft="-110dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="#5BF1E4E4"
            android:text="טסט פנימי"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15sp"
            app:iconTint="#5BF1E4E4"
            app:strokeColor="#131313" />

        <TextView

            android:id="@+id/btnbigtest"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="120dp"
            android:layout_height="131dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="#00CDDC39"
            android:text="טסט"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="15sp" />

        <TableRow>

            <Button
                android:id="@+id/btntimers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btncalendar"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btnscheduling"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btnprogress"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </TableRow>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/btnnextlesson"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_marginRight="-175dp"
            android:backgroundTint="#00CDDC39"
            android:hint="שיעור הבא:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/startlocation"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="-175dp"
            android:backgroundTint="#00CDDC39"
            android:hint="נקודת איסוף:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/finallocation"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="-175dp"
            android:backgroundTint="#00CDDC39"
            android:hint="נקודת סיום:"
            android:paddingLeft="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:iconTint="#0B0A0A"
            app:strokeColor="#131313" />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btnrating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"
            android:layout_marginRight="-175dp"/>
    </TableRow>


   </TableLayout>
</ScrollView>

